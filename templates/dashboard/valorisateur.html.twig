{% extends 'valorisateur/base_valorizateur.html.twig' %}

{% block title %}Dashboard Valorisateur | WasteWise TN{% endblock %}

{% block body %}

  {# ===== HEADER PAGE ===== #}
  <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-2 mb-3">
    <div>
      <h3 class="mb-1">üè≠ Dashboard Valorisateur</h3>
      <div class="text-muted">Valider / refuser les d√©clarations en attente</div>
    </div>

    <div class="d-flex flex-wrap gap-2">
      <a class="btn btn-outline-secondary" href="{{ path('app_valorizateur_historique') }}">
        <i class="bi bi-clock-history"></i> Historique
      </a>
      <a class="btn btn-primary" href="{{ path('val_appel_index') }}">
        <i class="bi bi-megaphone"></i> Appels d‚Äôoffres
      </a>
    </div>
  </div>

  {# ===== KPIs ===== #}
  <div class="row g-3 mb-3">
    <div class="col-12 col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex align-items-start justify-content-between">
          <div>
            <div class="text-muted small">En attente</div>
            <div class="fs-2 fw-bold">{{ countEnAttente|default(0) }}</div>
            <div class="small text-muted">√† traiter</div>
          </div>
          <div class="rounded-circle d-flex align-items-center justify-content-center"
               style="width:44px;height:44px;background:#fff7ed;border:1px solid rgba(0,0,0,.06);">
            <i class="bi bi-hourglass-split text-warning"></i>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex align-items-start justify-content-between">
          <div>
            <div class="text-muted small">Valid√©es</div>
            <div class="fs-2 fw-bold">{{ countValide|default(0) }}</div>
            <div class="small text-muted">global</div>
          </div>
          <div class="rounded-circle d-flex align-items-center justify-content-center"
               style="width:44px;height:44px;background:#ecfdf5;border:1px solid rgba(0,0,0,.06);">
            <i class="bi bi-check2-circle text-success"></i>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex align-items-start justify-content-between">
          <div>
            <div class="text-muted small">Refus√©es</div>
            <div class="fs-2 fw-bold">{{ countRefuse|default(0) }}</div>
            <div class="small text-muted">global</div>
          </div>
          <div class="rounded-circle d-flex align-items-center justify-content-center"
               style="width:44px;height:44px;background:#fef2f2;border:1px solid rgba(0,0,0,.06);">
            <i class="bi bi-x-circle text-danger"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# ===== RACCOURCIS ===== #}
  <div class="card shadow-sm mb-3">
    <div class="card-header fw-bold d-flex align-items-center justify-content-between flex-wrap gap-2">
      <span>Raccourcis</span>
      <span class="small text-muted">Acc√®s rapide</span>
    </div>
    <div class="card-body d-flex flex-wrap gap-2">
      <a class="btn btn-outline-primary" href="{{ path('val_appel_new') }}">
        <i class="bi bi-plus-circle"></i> Cr√©er un appel
      </a>
      <a class="btn btn-outline-secondary" href="{{ path('val_appel_index') }}">
        <i class="bi bi-list-check"></i> G√©rer les appels
      </a>
      <a class="btn btn-outline-success" href="#liste">
        <i class="bi bi-hourglass-split"></i> Voir les demandes
      </a>
    </div>
  </div>

  {# ===== LISTE EN ATTENTE ===== #}
  <div id="liste" class="card shadow-sm">
    <div class="card-header fw-bold d-flex align-items-center justify-content-between flex-wrap gap-2">
      <span>D√©clarations en attente</span>
      <span class="badge bg-primary">{{ countEnAttente|default(0) }}</span>
    </div>

    {% if enAttente|default([]) is empty %}
      <div class="card-body text-muted">
        ‚úÖ Aucune d√©claration en attente pour le moment.
      </div>
    {% else %}

      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th style="width:90px;">ID</th>
              <th>D√©chet</th>
              <th style="width:120px;">Quantit√©</th>
              <th>Localisation</th>
              <th>Citoyen</th>
              <th style="width:170px;">Date</th>
              <th class="text-end" style="width:240px;">Actions</th>
            </tr>
          </thead>

          <tbody>
            {% for d in enAttente %}
              <tr>
                <td class="fw-semibold">#{{ d.id }}</td>

                <td>
                  <div class="fw-semibold">{{ d.type|default('‚Äî')|e }}</div>
                  <span class="badge text-bg-warning text-dark mt-1">EN ATTENTE</span>
                </td>

                <td>
                  <span class="badge bg-light text-dark border">
                    {{ d.quantiteKg|default(0) }} kg
                  </span>
                </td>

                <td class="text-muted">
                  {% if d.adresse %}
                    {{ d.adresse|e }}
                  {% elseif d.latitude is not null and d.longitude is not null %}
                    {{ d.latitude }}, {{ d.longitude }}
                  {% else %}
                    ‚Äî
                  {% endif %}
                </td>

                <td>
                  {% if d.user %}
                    <div class="fw-semibold">{{ d.user.email }}</div>
                    <div class="small text-muted">ID user: #{{ d.user.id|default('‚Äî') }}</div>
                  {% else %}
                    ‚Äî
                  {% endif %}
                </td>

                <td class="text-muted small">
                  {{ d.createdAt ? d.createdAt|date('d/m/Y H:i') : '‚Äî' }}
                </td>

                <td class="text-end">
                  <div class="d-inline-flex gap-2 flex-wrap justify-content-end">

                    <form method="post"
                          action="{{ path('val_dechet_valider', {id: d.id}) }}"
                          onsubmit="return confirm('Valider cette d√©claration (#{{ d.id }}) ?');"
                          class="d-inline m-0">
                      <input type="hidden" name="_token" value="{{ csrf_token('dechet_validate_' ~ d.id) }}">
                      <button class="btn btn-success btn-sm" type="submit">
                        <i class="bi bi-check2-circle"></i> Valider
                      </button>
                    </form>

                    <form method="post"
                          action="{{ path('val_dechet_refuser', {id: d.id}) }}"
                          onsubmit="return confirm('Refuser cette d√©claration (#{{ d.id }}) ?');"
                          class="d-inline m-0">
                      <input type="hidden" name="_token" value="{{ csrf_token('dechet_refuse_' ~ d.id) }}">
                      <button class="btn btn-outline-danger btn-sm" type="submit">
                        <i class="bi bi-x-circle"></i> Refuser
                      </button>
                    </form>

                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>

        </table>
      </div>

      <div class="card-body border-top small text-muted">
        Astuce : actions s√©curis√©es (CSRF) + confirmation avant validation/refus.
      </div>

    {% endif %}
  </div>

{% endblock %}
