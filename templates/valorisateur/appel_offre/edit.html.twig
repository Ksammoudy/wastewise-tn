{% extends 'valorisateur/base_valorizateur.html.twig' %}

{% block title %}Modifier appel | WasteWise TN{% endblock %}

{% block body %}

  {# ===== HEADER ===== #}
  <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-3">
    <div>
      <h3 class="mb-1">✏️ Modifier l’appel</h3>
      <div class="text-muted d-flex flex-wrap gap-2 align-items-center">
        <span class="fw-semibold">{{ appel.titre }}</span>

        {% set st = appel.statut|default('BROUILLON') %}
        {% set badgeClass =
          st == 'PUBLIE' ? 'text-bg-success' :
          (st == 'BROUILLON' ? 'text-bg-secondary' :
          (st == 'FERME' ? 'text-bg-danger' : 'text-bg-warning'))
        %}
        <span class="badge {{ badgeClass }}">{{ st }}</span>

        <span class="text-muted small">• ID #{{ appel.id }}</span>
      </div>
    </div>

    <div class="d-flex gap-2 flex-wrap">
      <a class="btn btn-outline-secondary" href="{{ path('val_appel_index') }}">
        <i class="bi bi-arrow-left"></i> Liste
      </a>

      <a class="btn btn-outline-dark" href="{{ path('val_appel_show', {id: appel.id}) }}">
        <i class="bi bi-eye"></i> Voir
      </a>
    </div>
  </div>

  {# ===== CARD FORM ===== #}
  <div class="card shadow-sm">
    <div class="card-header fw-bold d-flex align-items-center justify-content-between">
      <span>Mise à jour</span>
      <span class="text-muted small">Modifie les infos puis enregistre</span>
    </div>

    <div class="card-body">
      {{ include('valorisateur/appel_offre/_form.html.twig', {
        form: form,
        button_label: 'Mettre à jour'
      }) }}
    </div>

    <div class="card-footer bg-white d-flex justify-content-between align-items-center flex-wrap gap-2">
      <div class="text-muted small">
        Astuce : vérifie les dates (début/fin) avant de sauvegarder.
      </div>

      <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="{{ path('val_appel_show', {id: appel.id}) }}">
          Annuler
        </a>
        {# Le bouton submit est dans _form.html.twig via button_label #}
      </div>
    </div>
  </div>

{% endblock %}
