{{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}

  {# Erreurs globales #}
  {% if form_errors(form) %}
    <div class="alert alert-danger mb-3">
      {{ form_errors(form) }}
    </div>
  {% endif %}

  <div class="row g-3">

    <div class="col-12 col-md-6">
      {{ form_label(form.titre, 'Titre', { label_attr: { class: 'form-label fw-semibold' } }) }}
      {{ form_widget(form.titre, { attr: { class: 'form-control', placeholder: 'Ex: Collecte de plastique' } }) }}
      <div class="text-danger small mt-1">{{ form_errors(form.titre) }}</div>
    </div>

    <div class="col-12 col-md-6">
      {{ form_label(form.statut, 'Statut', { label_attr: { class: 'form-label fw-semibold' } }) }}
      {# select => form-select #}
      {{ form_widget(form.statut, { attr: { class: 'form-select' } }) }}
      <div class="text-danger small mt-1">{{ form_errors(form.statut) }}</div>
    </div>

    <div class="col-12">
      {{ form_label(form.description, 'Description', { label_attr: { class: 'form-label fw-semibold' } }) }}
      {{ form_widget(form.description, { attr: { class: 'form-control', rows: 4, placeholder: 'Détails, conditions...' } }) }}
      <div class="text-danger small mt-1">{{ form_errors(form.description) }}</div>
    </div>

    <div class="col-12 col-md-6">
      {{ form_label(form.dateDebut, 'Date début', { label_attr: { class: 'form-label fw-semibold' } }) }}
      {{ form_widget(form.dateDebut, { attr: { class: 'form-control' } }) }}
      <div class="text-danger small mt-1">{{ form_errors(form.dateDebut) }}</div>
    </div>

    <div class="col-12 col-md-6">
      {{ form_label(form.dateFin, 'Date fin', { label_attr: { class: 'form-label fw-semibold' } }) }}
      {{ form_widget(form.dateFin, { attr: { class: 'form-control' } }) }}
      <div class="text-danger small mt-1">{{ form_errors(form.dateFin) }}</div>
      <div class="form-text">Laisse vide si l’appel n’a pas de date de fin.</div>
    </div>

  </div>

  <div class="d-flex justify-content-end gap-2 mt-4">
    <a class="btn btn-outline-secondary" href="{{ path('val_appel_index') }}">
      <i class="bi bi-x-circle"></i> Annuler
    </a>

    <button class="btn btn-success" type="submit">
      <i class="bi bi-check2-circle"></i>
      {{ button_label|default('Enregistrer') }}
    </button>
  </div>

{{ form_end(form) }}
