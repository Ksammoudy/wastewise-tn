{% extends 'admin/base_admin.html.twig' %}

{% block title %}Nouvelle r√©compense | WasteWise TN{% endblock %}
{% block page_title %}R√©compenses{% endblock %}

{% block sidebar %}
  {% include 'admin/_sidebar.html.twig' %}
{% endblock %}

{% block body %}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
  <div>
    <h2 class="mb-0">üéÅ Nouvelle r√©compense</h2>
    <div class="text-muted small">
      {% if form.partenaire.vars.disabled %}
        Partenaire s√©lectionn√© depuis la fiche (champ verrouill√©).
      {% else %}
        Choisir un partenaire puis d√©finir la r√©compense.
      {% endif %}
    </div>
  </div>

  <a class="btn btn-outline-secondary" href="{{ path('recompense_index') }}">
    <i class="bi bi-arrow-left"></i> Retour
  </a>
</div>

<div class="row g-4">

  {# ================= FORMULAIRE ================= #}
  <div class="col-lg-8">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white d-flex align-items-center justify-content-between">
        <div class="fw-bold">
          <i class="bi bi-gift me-1"></i> Cr√©ation d‚Äôune r√©compense
        </div>
        <span class="badge bg-success-subtle text-success border">
          Nouveau
        </span>
      </div>

      <div class="card-body">
        {{ form_start(form, { attr: { novalidate: 'novalidate', class: 'row g-3' } }) }}

          <div class="col-12 col-md-6">
            {{ form_label(form.titre, 'Titre', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.titre, { attr: { class: 'form-control', placeholder: "Ex: Bon d‚Äôachat 10DT" } }) }}
            <div class="text-danger small">{{ form_errors(form.titre) }}</div>
          </div>

          <div class="col-12 col-md-6">
            {{ form_label(form.partenaire, 'Partenaire', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.partenaire, { attr: { class: 'form-select' } }) }}
            <div class="text-danger small">{{ form_errors(form.partenaire) }}</div>

            {% if form.partenaire.vars.disabled %}
              <div class="form-text">Ce partenaire a √©t√© choisi depuis sa fiche.</div>
            {% else %}
              <div class="form-text">Choisis le partenaire qui propose cette r√©compense.</div>
            {% endif %}
          </div>

          <div class="col-12">
            {{ form_label(form.description, 'Description (optionnel)', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.description, { attr: { class: 'form-control', rows: 4, placeholder: 'D√©tails sur la r√©compense...' } }) }}
            <div class="text-danger small">{{ form_errors(form.description) }}</div>
          </div>

          <div class="col-12 col-md-6">
            {{ form_label(form.pointsNecessaires, 'Points n√©cessaires', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.pointsNecessaires, { attr: { class: 'form-control', min: 1 } }) }}
            <div class="text-danger small">{{ form_errors(form.pointsNecessaires) }}</div>
          </div>

          <div class="col-12 col-md-6">
            {{ form_label(form.stock, 'Stock', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.stock, { attr: { class: 'form-control', min: 0 } }) }}
            <div class="text-danger small">{{ form_errors(form.stock) }}</div>
            <div class="form-text">Astuce : mets un stock faible (&lt; 5) pour tester ‚ÄúFaible‚Äù.</div>
          </div>

          {# ‚úÖ CSRF + champs cach√©s #}
          {{ form_rest(form) }}

          <div class="col-12 d-flex justify-content-end gap-2 mt-2 flex-wrap">
            <a class="btn btn-outline-secondary" href="{{ path('recompense_index') }}">
              <i class="bi bi-x-circle"></i> Annuler
            </a>

            <button class="btn btn-primary" type="submit">
              <i class="bi bi-save"></i> Enregistrer
            </button>
          </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>

  {# ================= CONSEILS ================= #}
  <div class="col-lg-4">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white fw-bold">
        <i class="bi bi-lightbulb me-1"></i> Conseils
      </div>

      <div class="card-body">
        <ul class="mb-0 small text-muted">
          <li>Choisis un titre court et clair.</li>
          <li>V√©rifie les points n√©cessaires (min 1).</li>
          <li>Stock = 0 signifie rupture.</li>
