          <a class="btn btn-outline-dark" href="{{ path('partenaire_show', { id: r.partenaire.id }) }}">
            <i class="bi bi-building"></i> Voir partenaire
          </a>
        {% endif %}

        <div class="border-top pt-3">
          <div class="text-muted small mb-2">Suppression</div>

          <form method="post"
                action="{{ path('recompense_delete', { id: r.id }) }}"
                onsubmit="return confirm('Supprimer cette rÃ©compense ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete_recompense_' ~ r.id) }}">
            <button class="btn btn-outline-danger w-100" type="submit">
              <i class="bi bi-trash"></i> Supprimer
