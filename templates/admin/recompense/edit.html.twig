{% extends 'admin/base_admin.html.twig' %}

{% block title %}Modifier récompense | WasteWise TN{% endblock %}
{% block page_title %}Récompenses{% endblock %}

{% block sidebar %}
  {% include 'admin/_sidebar.html.twig' %}
{% endblock %}

{% block body %}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
  <div>
    <h2 class="mb-0">✏️ Modifier récompense</h2>
    <div class="text-muted small">
      Récompense : <b>{{ r.titre }}</b>
      {% if r.partenaire %}
        — Partenaire : <b>{{ r.partenaire.nomEntreprise }}</b>
      {% endif %}
    </div>
  </div>

  <div class="d-flex gap-2">
    {% if r.partenaire %}
      <a class="btn btn-outline-secondary" href="{{ path('partenaire_show', { id: r.partenaire.id }) }}">
        <i class="bi bi-arrow-left"></i> Retour partenaire
      </a>
    {% endif %}

    <a class="btn btn-outline-primary" href="{{ path('recompense_index') }}">
      <i class="bi bi-list"></i> Liste récompenses
    </a>
  </div>
</div>

<div class="row g-4">

  {# ================= FORMULAIRE ================= #}
  <div class="col-lg-8">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white d-flex align-items-center justify-content-between">
        <div class="fw-bold">Formulaire</div>
        <span class="badge bg-light text-dark border">
          <i class="bi bi-pencil-square"></i> Édition
        </span>
      </div>

      <div class="card-body">

        {{ form_start(form, { attr: { novalidate: 'novalidate', class: 'row g-3' } }) }}

          <div class="col-12 col-md-6">
            {{ form_label(form.titre, 'Titre', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.titre, { attr: { class: 'form-control', placeholder: "Ex: Bon d'achat 10DT" } }) }}
            <div class="text-danger small">{{ form_errors(form.titre) }}</div>
          </div>

          <div class="col-12 col-md-6">
            {{ form_label(form.partenaire, 'Partenaire', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.partenaire, { attr: { class: 'form-select' } }) }}
            <div class="text-danger small">{{ form_errors(form.partenaire) }}</div>
            <div class="form-text">Vous pouvez changer le partenaire si nécessaire.</div>
          </div>

          <div class="col-12">
            {{ form_label(form.description, 'Description (optionnel)', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.description, { attr: { class: 'form-control', rows: 4, placeholder: 'Détails de la récompense...' } }) }}
            <div class="text-danger small">{{ form_errors(form.description) }}</div>
          </div>

          <div class="col-12 col-md-6">
            {{ form_label(form.pointsNecessaires, 'Points nécessaires', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.pointsNecessaires, { attr: { class: 'form-control', min: 1 } }) }}
            <div class="text-danger small">{{ form_errors(form.pointsNecessaires) }}</div>
          </div>

          <div class="col-12 col-md-6">
            {{ form_label(form.stock, 'Stock', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.stock, { attr: { class: 'form-control', min: 0 } }) }}
            <div class="text-danger small">{{ form_errors(form.stock) }}</div>
            <div class="form-text">0 = rupture de stock.</div>
          </div>

          {# ✅ champs cachés/CSRF #}
          {{ form_rest(form) }}

          <div class="col-12 d-flex align-items-center justify-content-between flex-wrap gap-2 mt-2">
            <div class="text-muted small">
              Vérifiez bien les points et le stock avant d’enregistrer.
            </div>

            <div class="d-flex gap-2">
              {% if r.partenaire %}
                <a class="btn btn-outline-secondary" href="{{ path('partenaire_show', { id: r.partenaire.id }) }}">
                  Annuler
                </a>
              {% else %}
                <a class="btn btn-outline-secondary" href="{{ path('recompense_index') }}">
                  Annuler
                </a>
              {% endif %}

              <button class="btn btn-primary" type="submit">
                <i class="bi bi-save"></i> Mettre à jour
              </button>
            </div>
          </div>

        {{ form_end(form) }}

      </div>
    </div>
  </div>

  {# ================= ACTIONS RAPIDES ================= #}
  <div class="col-lg-4">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white fw-bold">Actions rapides</div>

      <div class="card-body d-grid gap-2">
        <a class="btn btn-outline-primary" href="{{ path('recompense_index') }}">
          <i class="bi bi-list"></i> Liste récompenses
        </a>

        {% if r.partenaire %}
          <a class="btn btn-outline-secondary" href="{{ path('partenaire_show', { id: r.partenaire.id }) }}">
            <i class="bi bi-building"></i> Voir partenaire
          </a>
        {% endif %}

        <div class="border-top pt-3">
          <div class="text-muted small mb-2">Aide</div>
          <div class="small text-muted">
            Assure-toi que le stock et les points nécessaires sont cohérents.
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

{% endblock %}
