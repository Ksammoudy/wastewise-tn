{% extends 'admin/base_admin.html.twig' %}

{% block title %}Partenaires | WasteWise TN{% endblock %}
{% block page_title %}Partenaires{% endblock %}

{% block sidebar %}
  {% include 'admin/_sidebar.html.twig' %}
{% endblock %}

{% block body %}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
  <div>
    <h2 class="mb-0">ğŸ¢ Partenaires</h2>
    <div class="text-muted small">GÃ©rer les partenaires (sans comptes utilisateurs)</div>
  </div>

  <a class="btn btn-primary" href="{{ path('partenaire_new') }}">
    <i class="bi bi-plus-lg"></i> Nouveau partenaire
  </a>
</div>

{# âœ… Flash messages #}
{% for label, messages in app.flashes %}
  {% for m in messages %}
    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} shadow-sm">
      {{ m }}
    </div>
  {% endfor %}
{% endfor %}

<div class="card shadow-sm border-0">
  <div class="card-header bg-white d-flex align-items-center justify-content-between">
    <div class="fw-bold">Liste des partenaires</div>
    <span class="badge bg-light text-dark border">Total: {{ items|length }}</span>
  </div>

  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>Nom</th>
            <th>CatÃ©gorie</th>
            <th>Site</th>
            <th style="width:120px;">Statut</th>
            <th class="text-end" style="width:200px;">Actions</th>
          </tr>
        </thead>

        <tbody>
        {% for p in items %}
          <tr>
            <td class="fw-semibold">{{ p.nomEntreprise }}</td>
            <td>{{ p.categorie ?: 'â€”' }}</td>

            <td>
              {% if p.siteWeb %}
                <a href="{{ p.siteWeb }}" target="_blank" rel="noopener" class="text-decoration-none">
                  <i class="bi bi-link-45deg"></i> {{ p.siteWeb }}
                </a>
              {% else %}
                <span class="text-muted">â€”</span>
              {% endif %}
            </td>

            <td>
              {% if p.actif %}
                <span class="badge bg-success">Actif</span>
              {% else %}
                <span class="badge bg-secondary">Inactif</span>
              {% endif %}
            </td>

            <td class="text-end" style="white-space:nowrap;">
              <div class="btn-group" role="group">
                <a class="btn btn-sm btn-outline-secondary"
                   href="{{ path('partenaire_show', { id: p.id }) }}"
                   title="Ouvrir">
                  <i class="bi bi-folder2-open"></i>
                </a>

                <a class="btn btn-sm btn-outline-primary"
                   href="{{ path('partenaire_edit', { id: p.id }) }}"
                   title="Modifier">
                  <i class="bi bi-pencil"></i>
                </a>
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5" class="text-center py-4 text-muted">
              <i class="bi bi-info-circle"></i> Aucun partenaire. Clique sur â€œNouveau partenaireâ€.
            </td>
          </tr>
        {% endfor %}
        </tbody>

      </table>
    </div>
  </div>
</div>

{% endblock %}
