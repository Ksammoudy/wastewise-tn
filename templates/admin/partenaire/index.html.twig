{% extends 'admin/base_admin.html.twig' %}

{% block title %}Partenaires | WasteWise TN{% endblock %}

{% block body %}

<div class="container-fluid py-4">

  <div class="d-flex align-items-start justify-content-between mb-4">
    <div>
      <h3 class="mb-1">ğŸ¢ Partenaires</h3>
      <div class="text-muted">GÃ©rer les partenaires (sans comptes utilisateurs)</div>
    </div>

    <div>
      <a class="btn btn-primary" href="{{ path('partenaire_new') }}">
        <i class="bi bi-plus-lg"></i> Nouveau partenaire
      </a>
    </div>
  </div>

  {# âœ… Flash messages #}
  {% for label, messages in app.flashes %}
    {% for m in messages %}
      <div class="alert alert-{{ label == 'error' ? 'danger' : label }} shadow-sm">
        {{ m }}
      </div>
    {% endfor %}
  {% endfor %}

  <div class="card shadow-sm">
    <div class="card-header fw-bold">Liste des partenaires</div>

    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>Nom</th>
            <th>CatÃ©gorie</th>
            <th>Site</th>
            <th style="width:120px;">Statut</th>
            <th style="width:220px;" class="text-end">Actions</th>
          </tr>
        </thead>

        <tbody>
        {% for p in items %}
          <tr>
            <td class="fw-bold">{{ p.nomEntreprise }}</td>
            <td>{{ p.categorie }}</td>

            <td>
              {% if p.siteWeb %}
                <a href="{{ p.siteWeb }}" target="_blank" rel="noopener">
                  {{ p.siteWeb }}
                </a>
              {% else %}
                <span class="text-muted">â€”</span>
              {% endif %}
            </td>

            <td>
              {% if p.actif %}
                <span class="badge bg-success">Actif</span>
              {% else %}
                <span class="badge bg-secondary">Inactif</span>
              {% endif %}
            </td>

            <td class="text-end" style="white-space:nowrap;">
              <a class="btn btn-sm btn-outline-secondary"
                 href="{{ path('partenaire_show', { id: p.id }) }}">
                <i class="bi bi-folder2-open"></i> Ouvrir
              </a>

              <a class="btn btn-sm btn-outline-primary"
                 href="{{ path('partenaire_edit', { id: p.id }) }}">
                <i class="bi bi-pencil"></i> Modifier
              </a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5" class="text-muted">
              Aucun partenaire. Clique sur â€œNouveau partenaireâ€.
            </td>
          </tr>
        {% endfor %}
        </tbody>

      </table>
    </div>
  </div>

</div>

{% endblock %}
