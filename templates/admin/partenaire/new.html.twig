{% extends 'admin/base_admin.html.twig' %}

{% block title %}Nouveau partenaire | WasteWise TN{% endblock %}
{% block page_title %}Partenaires{% endblock %}

{% block sidebar %}
  {% include 'admin/_sidebar.html.twig' %}
{% endblock %}

{% block body %}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
  <div>
    <h2 class="mb-0">üè¢ Nouveau partenaire</h2>
    <div class="text-muted small">
      Cr√©er un partenaire (sans compte utilisateur) pour g√©rer ses r√©compenses
    </div>
  </div>

  <a class="btn btn-outline-secondary" href="{{ path('partenaire_index') }}">
    <i class="bi bi-arrow-left"></i> Retour
  </a>
</div>

{# ‚úÖ Flash messages (optionnel, si tu les utilises) #}
{% for label, messages in app.flashes %}
  {% for m in messages %}
    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} shadow-sm">
      {{ m }}
    </div>
  {% endfor %}
{% endfor %}

<div class="row g-4">

  {# ================= FORMULAIRE ================= #}
  <div class="col-lg-8">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white d-flex align-items-center justify-content-between">
        <div class="fw-bold">
          <i class="bi bi-building-add me-1"></i> Cr√©ation d‚Äôun partenaire
        </div>
        <span class="badge bg-success-subtle text-success border">Nouveau</span>
      </div>

      <div class="card-body">

        {# ‚úÖ Erreurs globales #}
        {% if form.vars.errors|length %}
          <div class="alert alert-warning">
            Merci de corriger les erreurs dans le formulaire.
          </div>
        {% endif %}

        {{ form_start(form, { attr: { novalidate: 'novalidate', class: 'row g-3' } }) }}

          <div class="col-12 col-md-6">
            {{ form_label(form.nomEntreprise, 'Nom de l‚Äôentreprise', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.nomEntreprise, { attr: { class: 'form-control', placeholder: 'Ex: Carrefour, Monoprix...' } }) }}
            <div class="text-danger small">{{ form_errors(form.nomEntreprise) }}</div>
          </div>

          <div class="col-12 col-md-6">
            {{ form_label(form.categorie, 'Cat√©gorie', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.categorie, { attr: { class: 'form-control', placeholder: 'Ex: Supermarch√©, ONG, Startup...' } }) }}
            <div class="text-danger small">{{ form_errors(form.categorie) }}</div>
          </div>

          <div class="col-12">
            {{ form_label(form.siteWeb, 'Site web (optionnel)', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.siteWeb, { attr: { class: 'form-control', placeholder: 'https://www.exemple.com' } }) }}
            <div class="text-danger small">{{ form_errors(form.siteWeb) }}</div>
          </div>

          <div class="col-12">
            <div class="form-check">
              {{ form_widget(form.actif, { attr: { class: 'form-check-input' } }) }}
              {{ form_label(form.actif, 'Partenaire actif (visible et utilisable)', { label_attr: { class: 'form-check-label' } }) }}
            </div>
            <div class="text-danger small">{{ form_errors(form.actif) }}</div>
          </div>

          {# ‚úÖ CSRF + champs cach√©s #}
          {{ form_rest(form) }}

          <div class="col-12 d-flex justify-content-end gap-2 mt-2 flex-wrap">
            <a class="btn btn-outline-secondary" href="{{ path('partenaire_index') }}">
              <i class="bi bi-x-circle"></i> Annuler
            </a>
            <button class="btn btn-primary" type="submit">
              <i class="bi bi-save"></i> Enregistrer
            </button>
          </div>

        {{ form_end(form) }}

        <div class="form-text mt-3">
          Astuce : apr√®s cr√©ation, ouvre le partenaire pour ajouter des r√©compenses.
        </div>

      </div>
    </div>
  </div>

  {# ================= CONSEILS ================= #}
  <div class="col-lg-4">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white fw-bold">
        <i class="bi bi-lightbulb me-1"></i> Conseils
      </div>
      <div class="card-body">
        <ul class="mb-0 small text-muted">
          <li>Nom clair et officiel (ex: ‚ÄúMonoprix‚Äù).</li>
          <li>Cat√©gorie utile pour filtrer plus tard.</li>
          <li>Site web optionnel (lien externe).</li>
          <li>D√©sactive ‚ÄúActif‚Äù si tu veux le cacher temporairement.</li>
        </ul>
      </div>
    </div>
  </div>

</div>

{% endblock %}
