<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}Admin | WasteWise{% endblock %}</title>

  {# ===== Bootstrap CSS ===== #}
  <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">

  {# ===== Bootstrap Icons ===== #}
  <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap-icons/bootstrap-icons.css') }}">

  {# ===== Font Awesome ===== #}
  <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome/css/all.min.css') }}">

  {# ===== Overlay Scrollbar ===== #}
  <link rel="stylesheet" href="{{ asset('assets/vendor/overlay-scrollbar/css/OverlayScrollbars.min.css') }}">

  {# ===== Ton style personnalisé ===== #}
  <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">

  <style>
    .main-wrapper {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 280px;
      flex: 0 0 280px;
      border-right: 1px solid rgba(0,0,0,.08);
      background: #fff;
    }

    .page-wrapper {
      flex: 1 1 auto;
      min-width: 0;
      background: #f8fafc;
    }

    .page-header {
      position: sticky;
      top: 0;
      z-index: 10;
    }
  </style>

  {% block stylesheets %}{% endblock %}
</head>

<body>

{% set route = app.request.attributes.get('_route') %}

<div class="main-wrapper">

  {# ===== SIDEBAR ===== #}
  <aside class="sidebar">
    <div class="p-3">
      <a href="{{ path('app_dashboard_admin') }}" class="d-flex align-items-center gap-2 text-decoration-none">
        <span class="fw-bold text-primary">WasteWise TN</span>
      </a>
      <div class="small text-muted">Administration</div>
    </div>

    <div class="px-2 pb-3">
      <ul class="nav flex-column gap-1">

        <li class="nav-item">
          <a class="nav-link {{ route == 'app_dashboard_admin' ? 'active fw-bold' : '' }}"
             href="{{ path('app_dashboard_admin') }}">
            <i class="bi bi-speedometer2 me-2"></i> Dashboard
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link {{ route starts with 'app_user_' ? 'active fw-bold' : '' }}"
             href="{{ path('app_user_index') }}">
            <i class="bi bi-people me-2"></i> Utilisateurs
          </a>
        </li>

        {# ===== Déchets supprimé ici ===== #}

        <li class="nav-item">
          <a class="nav-link {{ route starts with 'partenaire_' ? 'active fw-bold' : '' }}"
             href="{{ path('partenaire_index') }}">
            <i class="bi bi-buildings me-2"></i> Partenaires
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link {{ route starts with 'recompense_' ? 'active fw-bold' : '' }}"
             href="{{ path('recompense_index') }}">
            <i class="bi bi-gift me-2"></i> Récompenses
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link {{ route starts with 'admin_campagne_' ? 'active fw-bold' : '' }}"
             href="{{ path('admin_campagne_index') }}">
            <i class="bi bi-megaphone me-2"></i> Campagnes
          </a>
        </li>

        <li class="nav-item mt-2">
          <a class="nav-link text-danger" href="{{ path('app_logout') }}">
            <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
          </a>
        </li>

      </ul>
    </div>
  </aside>

  {# ===== PAGE CONTENT ===== #}
  <div class="page-wrapper">

    <header class="page-header bg-white border-bottom px-4 py-3 d-flex align-items-center justify-content-between">
      <div class="fw-bold">Admin</div>

      {% if app.user %}
        <div class="d-flex align-items-center gap-2">
          <i class="bi bi-person-circle"></i>
          <span class="small text-muted">{{ app.user.userIdentifier }}</span>
        </div>
      {% endif %}
    </header>

    <main class="px-4 py-4">
      {% block body %}{% endblock %}
    </main>

  </div>

</div>

{# ===== Bootstrap JS ===== #}
<script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>

{# ===== Overlay Scrollbar JS ===== #}
<script src="{{ asset('assets/vendor/overlay-scrollbar/js/OverlayScrollbars.min.js') }}"></script>

{# ===== Script principal ===== #}
<script src="{{ asset('assets/js/script.js') }}"></script>

{% block javascripts %}{% endblock %}

</body>
</html>
