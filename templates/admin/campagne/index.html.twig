{% extends 'admin/base_admin.html.twig' %}

{% block title %}Campagnes | WasteWise TN{% endblock %}
{% block page_title %}Campagnes{% endblock %}

{% block sidebar %}
  {% include 'admin/_sidebar.html.twig' %}
{% endblock %}

{% block body %}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
  <div>
    <h2 class="mb-0">ðŸ“£ Campagnes</h2>
    <div class="text-muted small">Gestion des campagnes (CRUD)</div>
  </div>

  <a class="btn btn-primary" href="{{ path('admin_campagne_new') }}">
    <i class="bi bi-plus-lg"></i> Nouvelle campagne
  </a>
</div>

{# âœ… Flash messages #}
{% for label, messages in app.flashes %}
  {% for msg in messages %}
    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} shadow-sm">
      {{ msg }}
    </div>
  {% endfor %}
{% endfor %}

<div class="card shadow-sm border-0">
  <div class="card-header bg-white d-flex align-items-center justify-content-between">
    <div class="fw-bold">Liste des campagnes</div>
    <span class="badge bg-light text-dark border">Total: {{ items|length }}</span>
  </div>

  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th style="width:90px;">ID</th>
            <th>Titre</th>
            <th>PÃ©riode</th>
            <th style="width:140px;">Statut</th>
            <th class="text-end" style="width:220px;">Actions</th>
          </tr>
        </thead>

        <tbody>
        {% for c in items %}
          <tr>
            <td class="fw-semibold">#{{ c.id }}</td>

            <td>
              <div class="fw-semibold">{{ c.titre }}</div>
            </td>

            <td class="text-muted small">
              {{ c.dateDebut ? c.dateDebut|date('d/m/Y') : 'â€”' }}
              â†’
              {{ c.dateFin ? c.dateFin|date('d/m/Y') : 'â€”' }}
            </td>

            <td>
              {% if c.statut == 'ACTIVE' %}
                <span class="badge bg-success">ACTIVE</span>
              {% elseif c.statut == 'BROUILLON' %}
                <span class="badge bg-warning text-dark">BROUILLON</span>
              {% else %}
                <span class="badge bg-secondary">TERMINEE</span>
              {% endif %}
            </td>

            <td class="text-end" style="white-space:nowrap;">
              <div class="btn-group" role="group">
                <a class="btn btn-sm btn-outline-secondary"
                   href="{{ path('admin_campagne_show', { id: c.id }) }}"
                   title="Voir">
                  <i class="bi bi-eye"></i>
                </a>

                <a class="btn btn-sm btn-outline-primary"
                   href="{{ path('admin_campagne_edit', { id: c.id }) }}"
                   title="Modifier">
                  <i class="bi bi-pencil"></i>
                </a>
              </div>

              <span class="ms-2">
                <form method="post"
                      action="{{ path('admin_campagne_delete', { id: c.id }) }}"
                      onsubmit="return confirm('Supprimer cette campagne ?');"
                      class="d-inline">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete_campagne_' ~ c.id) }}">
                  <button class="btn btn-sm btn-outline-danger" type="submit" title="Supprimer">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </span>
            </td>
          </tr>

        {% else %}
          <tr>
            <td colspan="5" class="text-center py-4 text-muted">
              <i class="bi bi-info-circle"></i> Aucune campagne.
            </td>
          </tr>
        {% endfor %}
        </tbody>

      </table>
    </div>
  </div>
</div>

{% endblock %}
