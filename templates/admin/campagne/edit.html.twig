{% extends 'admin/base_admin.html.twig' %}

{% block title %}Modifier campagne | WasteWise TN{% endblock %}
{% block page_title %}Campagnes{% endblock %}

{% block sidebar %}
  {% include 'admin/_sidebar.html.twig' %}
{% endblock %}

{% block body %}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
  <div>
    <h2 class="mb-0">✏️ Modifier campagne</h2>
    <div class="text-muted small">{{ c.titre }}</div>
  </div>

  <div class="d-flex gap-2 flex-wrap">
    <a class="btn btn-outline-secondary" href="{{ path('admin_campagne_show', { id: c.id }) }}">
      <i class="bi bi-eye"></i> Voir
    </a>

    <a class="btn btn-outline-primary" href="{{ path('admin_campagne_index') }}">
      <i class="bi bi-arrow-left"></i> Retour
    </a>
  </div>
</div>

{# ✅ Formulaire (ww-card2) #}
{% include 'admin/campagne/_form.html.twig' with {
  form: form,
  title: 'Mise à jour',
  button_label: 'Mettre à jour',
  action_cancel: path('admin_campagne_show', { id: c.id })
} %}

{% endblock %}
