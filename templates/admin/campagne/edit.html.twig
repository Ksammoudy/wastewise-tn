{% extends 'admin/base_admin.html.twig' %}

{% block title %}Modifier campagne | Admin{% endblock %}

{% block body %}

<div class="container-fluid py-4">

  <div class="d-flex align-items-start justify-content-between mb-4">
    <div>
      <h3 class="mb-1">✏️ Modifier</h3>
      <div class="text-muted">{{ c.titre }}</div>
    </div>

    <div class="d-flex gap-2">
      <a class="btn btn-outline-secondary" href="{{ path('admin_campagne_show', { id: c.id }) }}">
        <i class="bi bi-eye"></i> Voir
      </a>

      <a class="btn btn-outline-primary" href="{{ path('admin_campagne_index') }}">
        <i class="bi bi-arrow-left"></i> Retour
      </a>
    </div>
  </div>

  {# Formulaire #}
  {% include 'admin/campagne/_form.html.twig' with { form: form, title: 'Mise à jour' } %}

</div>

{% endblock %}
