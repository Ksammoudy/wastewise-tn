{{ form_start(form, { attr: { class: 'row g-3' } }) }}

  {# === Email === #}
  <div class="col-md-6">
    <label class="form-label">Email</label>
    {{ form_widget(form.email, {
        attr: { class: 'form-control', placeholder: 'exemple@email.com' }
    }) }}
    <div class="text-danger small">
      {{ form_errors(form.email) }}
    </div>
  </div>

  {# === Password === #}
  <div class="col-md-6">
    <label class="form-label">Mot de passe</label>
    {{ form_widget(form.password, {
        attr: { class: 'form-control', placeholder: '••••••••' }
    }) }}
    <div class="text-danger small">
      {{ form_errors(form.password) }}
    </div>
  </div>

  {# === Nom === #}
  <div class="col-md-6">
    <label class="form-label">Nom</label>
    {{ form_widget(form.nom, {
        attr: { class: 'form-control', placeholder: 'Nom' }
    }) }}
    <div class="text-danger small">
      {{ form_errors(form.nom) }}
    </div>
  </div>

  {# === Prénom === #}
  <div class="col-md-6">
    <label class="form-label">Prénom</label>
    {{ form_widget(form.prenom, {
        attr: { class: 'form-control', placeholder: 'Prénom' }
    }) }}
    <div class="text-danger small">
      {{ form_errors(form.prenom) }}
    </div>
  </div>

  {# === Téléphone === #}
  <div class="col-md-6">
    <label class="form-label">Téléphone</label>
    {{ form_widget(form.telephone, {
        attr: { class: 'form-control', placeholder: 'Ex: 20 000 000' }
    }) }}
    <div class="text-danger small">
      {{ form_errors(form.telephone) }}
    </div>
  </div>

  {# === Type === #}
  <div class="col-md-6">
    <label class="form-label">Type utilisateur</label>
    {{ form_widget(form.type, {
        attr: { class: 'form-select' }
    }) }}
    <div class="text-danger small">
      {{ form_errors(form.type) }}
    </div>
  </div>

  {# === Boutons === #}
  <div class="col-12 d-flex justify-content-end gap-2 mt-3">
    <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
      Annuler
    </a>

    <button type="submit" class="btn btn-primary">
      <i class="bi bi-check-circle"></i>
      {{ button_label|default('Enregistrer') }}
    </button>
  </div>

{{ form_end(form) }}
