{# templates/citoyen/campagnes.html.twig #}
{% extends 'citoyen/base.html.twig' %}

{% block title %}Campagnes | WasteWise TN{% endblock %}

{% block body %}

<div class="container-fluid p-0">

  {# HEADER #}
  <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-3">
    <div>
      <h3 class="mb-1">ðŸ“£ Campagnes</h3>
      <div class="text-muted">Campagnes Ã©cologiques disponibles</div>
    </div>

    <div class="d-flex gap-2">
      <a class="btn btn-outline-secondary" href="{{ path('app_dashboard_citoyen') }}">
        <i class="bi bi-arrow-left"></i> Retour Dashboard
      </a>
    </div>
  </div>

  {# RÃ‰SUMÃ‰ #}
  <div class="d-flex flex-wrap gap-2 mb-3">
    <span class="badge text-bg-primary">Total : {{ campagnes|length }}</span>
    <span class="badge text-bg-success">Statut : ACTIVE</span>
  </div>

  {# CONTENU #}
  {% if campagnes is empty %}
    <div class="card shadow-sm">
      <div class="card-body text-muted fw-semibold">
        ðŸ«§ Aucune campagne disponible pour le moment.
      </div>
    </div>
  {% else %}

    <div class="row g-3">
      {% for c in campagnes %}

        {% set st = c.statut|default('ACTIVE') %}
        {% set badgeClass =
          st == 'ACTIVE' ? 'text-bg-success' :
          (st == 'TERMINEE' ? 'text-bg-secondary' : 'text-bg-warning')
        %}

        <div class="col-12 col-md-6 col-xl-4">
          <div class="card shadow-sm h-100">
            <div class="card-body d-flex flex-column">

              <div class="d-flex align-items-start justify-content-between gap-2">
                <h5 class="mb-0">{{ c.titre }}</h5>
                <span class="badge {{ badgeClass }}">{{ st }}</span>
              </div>

              <div class="text-muted small mt-2 d-flex flex-wrap gap-3">
                <div>
                  <i class="bi bi-calendar-event"></i>
                  DÃ©but :
                  <b class="text-dark">{{ c.dateDebut ? c.dateDebut|date('d/m/Y') : 'â€”' }}</b>
                </div>

                <div>
                  <i class="bi bi-hourglass-split"></i>
                  Fin :
                  <b class="text-dark">{{ c.dateFin ? c.dateFin|date('d/m/Y') : 'Sans fin' }}</b>
                </div>
              </div>

              <p class="text-muted mt-3 mb-0" style="line-height:1.5;">
                {{ c.description ?: 'Aucune description.' }}
              </p>

              <div class="mt-auto pt-3 d-flex justify-content-end">
                <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_dashboard_citoyen') }}">
                  Fermer
                </a>
              </div>

            </div>
          </div>
        </div>

      {% endfor %}
    </div>

  {% endif %}

</div>

{% endblock %}
