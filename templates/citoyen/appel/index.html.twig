{# templates/citoyen/appel_index.html.twig #}
{% extends 'citoyen/base.html.twig' %}

{% block title %}Appels ouverts | WasteWise TN{% endblock %}

{% block body %}

{# ===== HEADER ===== #}
<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
  <div>
    <h2 class="mb-0 ww-title">✅ Appels d’offres ouverts</h2>
    <div class="ww-subtitle">Choisis un appel et envoie ta proposition.</div>
  </div>

  <a class="btn btn-outline-secondary" href="{{ path('app_dashboard_citoyen') }}">
    <i class="bi bi-arrow-left"></i> Retour
  </a>
</div>

{# ===== RECHERCHE ===== #}
<div class="ww-card mb-3">
  <div class="ww-card-h">Recherche</div>
  <div class="ww-card-b">

    <form method="get">
      <div class="row g-2 align-items-end">
        <div class="col-12 col-md-8">
          <label class="form-label" for="q">Mot clé</label>
          <input
            id="q"
            class="form-control"
            name="q"
            value="{{ q|default('') }}"
            placeholder="Titre ou description..."
          >
        </div>

        <div class="col-12 col-md-4 d-flex gap-2 justify-content-md-end flex-wrap">
          <a class="btn btn-outline-secondary w-100 w-md-auto" href="{{ path('cit_appel_index') }}">
            <i class="bi bi-x-circle"></i> Réinitialiser
          </a>
          <button class="btn btn-success w-100 w-md-auto" type="submit">
            <i class="bi bi-search"></i> Rechercher
          </button>
        </div>
      </div>
    </form>

  </div>
</div>

{# ===== LISTE ===== #}
{% if appels is empty %}
  <div class="ww-card">
    <div class="ww-card-b text-muted fw-semibold">
      <i class="bi bi-info-circle"></i> Aucun appel ouvert pour le moment.
    </div>
  </div>
{% else %}

  <div class="row g-3">
    {% for a in appels %}
      {% set desc = a.description|default('') %}

      <div class="col-12 col-md-6 col-xl-4">
        <div class="ww-card h-100">
          <div class="ww-card-b d-flex flex-column">

            <div class="d-flex align-items-start justify-content-between gap-2">
              <div>
                <div class="fw-bold" style="font-size:1.05rem;">{{ a.titre }}</div>
                <div class="text-muted small">Appel #{{ a.id }}</div>
              </div>

              {# petit badge statut (optionnel) #}
              <span class="ww-badge">
                <i class="bi bi-unlock"></i> Ouvert
              </span>
            </div>

            <div class="text-muted small mt-2 d-flex flex-wrap gap-2">
              <span class="ww-badge">
                <i class="bi bi-calendar-event"></i>
                Début : <b>{{ a.dateDebut ? a.dateDebut|date('d/m/Y') : '—' }}</b>
              </span>

              <span class="ww-badge">
                <i class="bi bi-hourglass-split"></i>
                Fin : <b>{{ a.dateFin ? a.dateFin|date('d/m/Y') : '—' }}</b>
              </span>
            </div>

            <div class="mt-3 text-muted" style="line-height:1.6;">
              {{ desc ? (desc|slice(0,160) ~ (desc|length > 160 ? '…' : '')) : '—' }}
            </div>

            <div class="mt-auto pt-3 d-flex justify-content-end gap-2 flex-wrap">
              <a class="btn btn-outline-secondary btn-sm"
                 href="{{ path('cit_appel_show', { id: a.id }) }}">
                <i class="bi bi-eye"></i> Voir
              </a>

              <a class="btn btn-success btn-sm"
                 href="{{ path('cit_appel_proposer', { id: a.id }) }}">
                <i class="bi bi-send"></i> Postuler
              </a>
            </div>

          </div>
        </div>
      </div>

    {% endfor %}
  </div>

{% endif %}

{% endblock %}
