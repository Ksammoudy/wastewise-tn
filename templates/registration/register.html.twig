{% extends 'base.html.twig' %}

{% block title %}Cr√©er un compte | WasteWise TN{% endblock %}

{% block stylesheets %}
<style>
  .auth-wrap{
    display:grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap:18px;
    align-items:stretch;
    margin-top:18px;
  }
  @media(max-width: 980px){
    .auth-wrap{ grid-template-columns:1fr; }
  }

  .auth-hero{
    border-radius:22px;
    padding:24px;
    border:1px solid rgba(0,0,0,.06);
    background: linear-gradient(135deg, rgba(16,185,129,.14), rgba(34,197,94,.08));
    min-height: 540px;
    display:flex;
    flex-direction:column;
    justify-content:space-between;
  }
  .auth-hero h1{ margin:0; font-size:38px; line-height:1.05; font-weight:900; letter-spacing:-.4px; }
  .auth-hero p{ margin:10px 0 0; color:rgba(0,0,0,.65); max-width:56ch; }

  .auth-badges{ display:grid; gap:10px; margin-top:16px; }
  .auth-badge{
    display:flex; gap:10px; align-items:flex-start;
    background: rgba(255,255,255,.75);
    border:1px solid rgba(0,0,0,.06);
    padding:12px 14px;
    border-radius:16px;
  }
  .auth-badge .ic{
    width:34px;height:34px;border-radius:12px;
    display:grid;place-items:center;
    background: rgba(16,185,129,.14);
  }

  .auth-card{
    border-radius:22px;
    background:#fff;
    border:1px solid rgba(0,0,0,.06);
    box-shadow: 0 12px 35px rgba(15,23,42,.08);
    padding:22px;
    min-height: 540px;
  }
  .auth-title{ margin:0; font-weight:900; font-size:26px; }
  .auth-sub{ margin:6px 0 0; color:rgba(0,0,0,.6); }

  .auth-field{ margin-top:14px; }
  .auth-field label{ display:block; font-weight:800; font-size:13px; margin-bottom:7px; }
  .auth-input{
    width:100%;
    padding:12px 14px;
    border-radius:14px;
    border:1px solid rgba(0,0,0,.10);
    outline:none;
    font-size:14px;
    background:#fff;
  }
  .auth-input:focus{
    border-color: rgba(16,185,129,.55);
    box-shadow: 0 0 0 4px rgba(16,185,129,.12);
  }

  .auth-grid2{
    display:grid;
    grid-template-columns:1fr 1fr;
    gap:12px;
  }
  @media(max-width: 560px){
    .auth-grid2{ grid-template-columns:1fr; }
  }

  .auth-btn{
    margin-top:16px;
    width:100%;
    padding:12px 14px;
    border:0;
    border-radius:14px;
    font-weight:900;
    cursor:pointer;
    background: linear-gradient(180deg, #22c55e, #16a34a);
    color:#fff;
  }

  .auth-alert{
    margin-top:12px;
    border-radius:14px;
    padding:10px 12px;
    border:1px solid rgba(239,68,68,.25);
    background: rgba(254,242,242,.9);
    color:#991b1b;
    font-weight:800;
    font-size:13px;
  }

  .auth-row{
    margin-top:12px;
    display:flex; justify-content:flex-end; gap:10px; flex-wrap:wrap;
    font-weight:800; font-size:13px;
    color:rgba(0,0,0,.65);
  }
  .auth-link{ color:#0f766e; text-decoration:none; font-weight:900; }
  .auth-link:hover{ text-decoration:underline; }
</style>
{% endblock %}

{% block body %}
<div class="auth-wrap">

  <section class="auth-hero">
    <div>
      <h1>Cr√©er un compte üå±</h1>
      <p>Rejoins la communaut√© WasteWise TN et commence √† d√©clarer tes d√©chets.</p>

      <div class="auth-badges">
        <div class="auth-badge">
          <div class="ic">üóëÔ∏è</div>
          <div>
            <div style="font-weight:900;">D√©clarations</div>
            <div style="color:rgba(0,0,0,.6); font-size:13px;">Rapide et simple</div>
          </div>
        </div>
        <div class="auth-badge">
          <div class="ic">‚úÖ</div>
          <div>
            <div style="font-weight:900;">Suivi</div>
            <div style="color:rgba(0,0,0,.6); font-size:13px;">Statuts + historique</div>
          </div>
        </div>
        <div class="auth-badge">
          <div class="ic">üéÅ</div>
          <div>
            <div style="font-weight:900;">EcoPoints</div>
            <div style="color:rgba(0,0,0,.6); font-size:13px;">Badges et r√©compenses</div>
          </div>
        </div>
      </div>
    </div>

    <div style="color:rgba(0,0,0,.55); font-weight:800; font-size:13px;">
      WasteWise TN ‚Äî Plateforme citoyenne üåø
    </div>
  </section>

  <section class="auth-card">
    <h2 class="auth-title">Inscription</h2>
    <p class="auth-sub">Cr√©e ton compte en quelques secondes</p>

    {{ form_start(registrationForm) }}

      {% if not registrationForm.vars.valid %}
        <div class="auth-alert">Merci de corriger les erreurs du formulaire.</div>
      {% endif %}

      <div class="auth-field">
        {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'auth-input'}}) }}
        {{ form_errors(registrationForm.email) }}
      </div>

      <div class="auth-field">
        {{ form_label(registrationForm.plainPassword) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'auth-input'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}
      </div>

      {% if registrationForm.confirmPassword is defined %}
        <div class="auth-field">
          {{ form_label(registrationForm.confirmPassword) }}
          {{ form_widget(registrationForm.confirmPassword, {'attr': {'class': 'auth-input'}}) }}
          {{ form_errors(registrationForm.confirmPassword) }}
        </div>
      {% endif %}

      <div class="auth-grid2">
        <div class="auth-field">
          {{ form_label(registrationForm.nom) }}
          {{ form_widget(registrationForm.nom, {'attr': {'class': 'auth-input'}}) }}
          {{ form_errors(registrationForm.nom) }}
        </div>

        <div class="auth-field">
          {{ form_label(registrationForm.prenom) }}
          {{ form_widget(registrationForm.prenom, {'attr': {'class': 'auth-input'}}) }}
          {{ form_errors(registrationForm.prenom) }}
        </div>
      </div>

      {% if registrationForm.telephone is defined %}
        <div class="auth-field">
          {{ form_label(registrationForm.telephone) }}
          {{ form_widget(registrationForm.telephone, {'attr': {'class': 'auth-input'}}) }}
          {{ form_errors(registrationForm.telephone) }}
