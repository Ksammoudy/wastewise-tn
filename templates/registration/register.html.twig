      {% endif %}

      <button class="auth-btn" type="submit">Cr√©er mon compte</button>

      <div class="auth-row">
        <span>D√©j√† inscrit ?</span>
        <a class="auth-link" href="{{ path('app_login') }}">Se connecter</a>
      </div>

    {{ form_end(registrationForm) }}
  </section>

</div>
{% endblock %}
